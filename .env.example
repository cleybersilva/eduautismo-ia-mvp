# ============================================================================
# EduAutismo IA - Environment Variables (Docker Compose)
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Database - PostgreSQL
# ============================================================================
POSTGRES_USER=eduautismo
POSTGRES_PASSWORD=eduautismo_dev_pass_CHANGE_ME
POSTGRES_DB=eduautismo_dev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URL (auto-generated in docker-compose, but can override)
# DATABASE_URL=postgresql://eduautismo:password@postgres:5432/eduautismo_dev

# ============================================================================
# MongoDB (Logs & Analytics)
# ============================================================================
MONGO_USER=eduautismo
MONGO_PASSWORD=eduautismo_dev_pass_CHANGE_ME
MONGO_DB=eduautismo_logs
MONGO_HOST=mongodb
MONGO_PORT=27017

# ============================================================================
# Redis (Cache & Sessions)
# ============================================================================
REDIS_PASSWORD=eduautismo_dev_pass_CHANGE_ME
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================================
# Security & Authentication
# ============================================================================
# CRITICAL: Change these in production!
SECRET_KEY=dev_secret_key_CHANGE_IN_PRODUCTION_min_32_chars
JWT_SECRET_KEY=dev_jwt_secret_CHANGE_IN_PRODUCTION_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# OpenAI API
# ============================================================================
# REQUIRED: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ============================================================================
# AWS Configuration (Optional for development)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=eduautismo-dev

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ============================================================================
# Service Ports
# ============================================================================
API_PORT=8000
FRONTEND_PORT=5173
ADMINER_PORT=8080
MONGO_EXPRESS_PORT=8081
REDIS_COMMANDER_PORT=8082

# ============================================================================
# Admin Tools Credentials
# ============================================================================
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@eduautismo.com

# ============================================================================
# Monitoring & Logging (Optional)
# ============================================================================
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ML_PREDICTIONS=true
ENABLE_ACTIVITY_GENERATION=true
ENABLE_ANALYTICS=true

# ============================================================================
# Frontend Environment Variables
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_ENV=development

# ============================================================================
# Development Tools
# ============================================================================
# Set to true to enable development tools like Adminer, Mongo Express, etc.
ENABLE_DEV_TOOLS=true
