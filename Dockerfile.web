# ============================================================================
# EduAutismo IA - Frontend Dockerfile
# Multi-stage build for React + Vite application
# ============================================================================

# Build arguments
ARG NODE_VERSION=20

# ============================================================================
# Stage 1: Base - Common setup
# ============================================================================
FROM node:${NODE_VERSION}-alpine as base

# Metadata
LABEL maintainer="Cleyber Ferreira <cleyber@example.com>"
LABEL description="EduAutismo IA - React Frontend"
LABEL version="1.0.0"

# Install system dependencies
RUN apk add --no-cache \
    curl \
    git

# Set working directory
WORKDIR /app

# ============================================================================
# Stage 2: Dependencies - Install node modules
# ============================================================================
FROM base as dependencies

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci --prefer-offline --no-audit

# ============================================================================
# Stage 3: Development - For local development with hot-reload
# ============================================================================
FROM dependencies as development

# Copy application code
COPY frontend/ .

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser && \
    chown -R appuser:appuser /app

USER appuser

# Expose Vite dev server port
EXPOSE 5173

# Development command with hot-reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

# ============================================================================
# Stage 4: Builder - Build production assets
# ============================================================================
FROM dependencies as builder

# Copy application code
COPY frontend/ .

# Build arguments for environment variables
ARG VITE_API_URL=http://localhost:8000
ARG VITE_ENV=production

ENV VITE_API_URL=$VITE_API_URL
ENV VITE_ENV=$VITE_ENV

# Build the application
RUN npm run build

# Verify build output
RUN ls -la /app/dist/

# ============================================================================
# Stage 5: Production - Serve with Nginx
# ============================================================================
FROM nginx:alpine as production

# Install curl for health checks
RUN apk add --no-cache curl

# Copy custom nginx configuration
COPY <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 80;
    listen [::]:80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 10240;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/javascript application/json;
    gzip_disable "MSIE [1-6]\.";

    # Cache control for static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # SPA routing - redirect all requests to index.html
    location / {
        try_files \$uri \$uri/ /index.html;
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # Disable access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
EOF

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Create non-root user for nginx
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser && \
    chown -R appuser:appuser /usr/share/nginx/html && \
    chown -R appuser:appuser /var/cache/nginx && \
    chown -R appuser:appuser /var/log/nginx && \
    touch /var/run/nginx.pid && \
    chown -R appuser:appuser /var/run/nginx.pid

# Update nginx.conf to run as non-root
RUN sed -i 's/user  nginx;/user  appuser;/g' /etc/nginx/nginx.conf

USER appuser

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]

# ============================================================================
# Usage Examples:
# ============================================================================
#
# Development:
#   docker build --target development -t eduautismo-web:dev -f Dockerfile.web .
#   docker run -p 5173:5173 -v $(pwd)/frontend:/app eduautismo-web:dev
#
# Production:
#   docker build --target production -t eduautismo-web:prod -f Dockerfile.web .
#   docker run -p 80:80 eduautismo-web:prod
#
# With build args:
#   docker build --target production \
#     --build-arg VITE_API_URL=https://api.eduautismo.com \
#     -t eduautismo-web:prod -f Dockerfile.web .
#
# With docker-compose:
#   docker-compose up frontend
#
