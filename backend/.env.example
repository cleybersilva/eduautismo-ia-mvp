# ============================================
# EDUAUTISMO IA - CONFIGURAÇÕES DE AMBIENTE
# ============================================

# Application
APP_NAME=EduAutismo IA
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database - PostgreSQL
DATABASE_URL=postgresql://eduautismo:senha_segura@localhost:5432/eduautismo_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Database - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=eduautismo_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
SECRET_KEY=seu-secret-key-super-seguro-mude-em-producao
JWT_SECRET_KEY=seu-jwt-secret-key-super-seguro-mude-em-producao
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# OPENAI API - CONFIGURAÇÃO CRÍTICA
# ============================================
# IMPORTANTE: Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AWS Configuration (Opcional para MVP)
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eduautismo-storage
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# AWS Services (Opcional para MVP)
SAGEMAKER_ENDPOINT=eduautismo-ml-endpoint
LAMBDA_FUNCTION_ARN=arn:aws:lambda:us-east-1:123456789012:function:eduautismo

# Machine Learning
ML_MODEL_PATH=./ml-models/trained
CONFIDENCE_THRESHOLD=0.75
BATCH_SIZE=32
MAX_PREDICTION_TIME=5

# Email (Opcional para MVP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha
FROM_EMAIL=noreply@eduautismo.com.br

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
SENTRY_DSN=https://your-sentry-dsn

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_ML_ANALYSIS=True
ENABLE_ASYNC_PROCESSING=True
ENABLE_CACHE=True

# Celery (Opcional para MVP)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
